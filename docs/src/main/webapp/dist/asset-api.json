      "post": {
        "tags": [
          "Assets"
        ],
        "summary": "Onboard an asset",
        "operationId": "onboardUsingPOST",
        "parameters": [
          {
            "name": "scopeId",
            "in": "path",
            "description": "scopeId",
            "required": true,
            "style": "simple",
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          },
          {
            "name": "x-auth-jwt",
