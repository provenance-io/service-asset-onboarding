            "schema": {
              "type": "string"
            }
          },
          {
            "name": "x-public-key",
            "in": "header",
            "description": "x-public-key",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "x-address",
            "in": "header",
            "description": "x-address",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "string",
                "format": "byte"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Returns JSON encoded TX messages for writing scope to Provenance.",
            "content": {
              "*/*": {
                "schema": {
